SET COSTA150=C:\COSTA
IF NOT EXIST %COSTA150%\DESKTOP.EXE GOTO ExeNotFound
%COSTA150%\MOUSE.COM >NUL
%COSTA150%\DESKTOP.EXE /BOOT
:LoopStart
IF ERRORLEVEL = 2 GOTO RunBat
IF ERRORLEVEL = 1 GOTO Exit
%COSTA150%\DESKTOP.EXE
GOTO LoopStart
:RunBat
CALL %COSTA150%\DATA\TEMP\RUN.BAT
DEL %COSTA150%\DATA\TEMP\RUN.BAT
%COSTA150%\DESKTOP.EXE
GOTO LoopStart
:ExeNotFound
ECHO.
ECHO DESKTOP.EXE was not found in %COSTA150%.
ECHO.
ECHO Run SETUP.EXE to fix this issue.
ECHO.
SET COSTA150=
GOTO EndOfBAT
:Exit
